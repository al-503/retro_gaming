<div class="index_body">
  <div class="index_banner">
    <h1>All gaming console :</h1>
  </div>
    <div class="content cards">
      <% @offers.each do |offer| %>
        <%= link_to offer_path(offer), class: "offer_link" do %>
          <div class="card contour">

            <% if offer.photo.attached? %>
              <%= cl_image_tag offer.photo.key, class:"picture" %>
              <% else %>
              <%= image_tag "no_photo.jpg", class:"picture" %>
            <% end %>

            <div class="texte">
              <h2><%= offer.name %></h2> 
              <i class="far fa-heart"></i>
              <p><%= truncate(offer.description) %></p>
              <p><%= offer.price_per_day %> $</p>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>

      <div class="container">
        <div id="map"
          style="width: 100%; height: 600px;"
          data-markers="<%= @markers.to_json %>"
          data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
      
    </div>
      <%= link_to "Go Home", root_path, class:"btn btn-primary rounded"%>
</div>
